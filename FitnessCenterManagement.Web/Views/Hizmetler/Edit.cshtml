@model Hizmet

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            
            <form asp-action="Edit" asp-controller="Hizmetler" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Ad" class="form-label">Hizmet Adı*</label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SureDakika" class="form-label">Süre (Dakika)*</label>
                    <input asp-for="SureDakika" class="form-control" type="number" />
                    <span asp-validation-for="SureDakika" class="text-danger"></span>
                </div>

                <!-- Hizmetin ücreti (Ucret property kullanılır) -->
                <div class="mb-3">
                    <label asp-for="Ucret" class="form-label">Ücret (₺)*</label>
                    <input asp-for="Ucret" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Ucret" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Aciklama" class="form-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SporSalonuId" class="form-label">Spor Salonu*</label>
                    <select asp-for="SporSalonuId" class="form-control" asp-items="ViewBag.SporSalonu"></select>
                    <span asp-validation-for="SporSalonuId" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
