@{
    ViewData["Title"] = "Diyet Tavsiyesi";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">
                <i class="bi bi-robot"></i> @ViewData["Title"]
            </h2>
            
            <form asp-action="DiyetTavsiyesi" method="post">
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">Kişisel Bilgileriniz</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="Boy" class="form-label">Boy (cm)*</label>
                            <input type="number" id="Boy" name="Boy" class="form-control" min="50" max="300" required />
                        </div>

                        <div class="mb-3">
                            <label for="Agirlik" class="form-label">Ağırlık (kg)*</label>
                            <input type="number" id="Agirlik" name="Agirlik" class="form-control" min="10" max="300" required />
                        </div>

                        <div class="mb-3">
                            <label for="Cinsiyet" class="form-label">Cinsiyet*</label>
                            <select id="Cinsiyet" name="Cinsiyet" class="form-control" required>
                                <option value="">Seçiniz</option>
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="FitnessHedefi" class="form-label">Fitness Hedefi*</label>
                            <input type="text" id="FitnessHedefi" name="FitnessHedefi" class="form-control" placeholder="örn: Kas kazanma, Kilo verme" required />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-lg btn-success">
                    <i class="bi bi-lightning-charge"></i> Tavsiye Al
                </button>
                <a asp-action="Index" class="btn btn-lg btn-secondary">İptal</a>
            </form>

            @if (ViewBag.Tavsiye != null)
            {
                <div class="card mt-4 border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-check-circle"></i> Diyet Tavsiyesi
                        </h5>
                    </div>
                    <div class="card-body">
                        @Html.Raw(ViewBag.Tavsiye)
                    </div>
                </div>
            }
        </div>
    </div>
</div>
