@{
    ViewData["Title"] = "Admin Paneli";
}

<!-- Sayfa Başlığı -->
<div class="page-header mb-4">
    <h1 class="h2">
        <i class="fas fa-tachometer-alt"></i> Admin Paneli
    </h1>
    <p class="text-muted">Sistem Yönetim Merkezi</p>
</div>

<!-- Yönetim Kartları -->
<div class="row g-4">
    <!-- Spor Salonları -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-building fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Spor Salonları</h5>
                <p class="text-muted small">Salonları yönet</p>
                <a href="@Url.Action("Index", "SporSalonu")" class="btn btn-sm btn-primary">
                    <i class="fas fa-arrow-right"></i> Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Antrenörler -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-user-tie fa-3x text-success mb-3"></i>
                <h5 class="card-title">Antrenörler</h5>
                <p class="text-muted small">Antrenörleri yönet</p>
                <a href="@Url.Action("Index", "Antrenorler")" class="btn btn-sm btn-success">
                    <i class="fas fa-arrow-right"></i> Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Hizmetler -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-spa fa-3x text-info mb-3"></i>
                <h5 class="card-title">Hizmetler</h5>
                <p class="text-muted small">Hizmetleri yönet</p>
                <a href="@Url.Action("Index", "Hizmetler")" class="btn btn-sm btn-info">
                    <i class="fas fa-arrow-right"></i> Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Üyeler -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Üyeler</h5>
                <p class="text-muted small">Üyeleri yönet</p>
                <a href="@Url.Action("Index", "Uyeler")" class="btn btn-sm btn-warning">
                    <i class="fas fa-arrow-right"></i> Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- Randevular -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-calendar-check fa-3x text-danger mb-3"></i>
                <h5 class="card-title">Randevular</h5>
                <p class="text-muted small">Randevuları yönet ve onayla</p>
                <a href="@Url.Action("ManageRandevu", "Admin")" class="btn btn-sm btn-danger">
                    <i class="fas fa-arrow-right"></i> Yönet
                </a>
            </div>
        </div>
    </div>

    <!-- REST API -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-plug fa-3x text-secondary mb-3"></i>
                <h5 class="card-title">REST API</h5>
                <p class="text-muted small">API Dokümantasyonu</p>
                <button class="btn btn-sm btn-secondary" data-bs-toggle="collapse" data-bs-target="#apiDocs">
                    <i class="fas fa-book"></i> Göster
                </button>
            </div>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="text-muted">Spor Salonları</h5>
                <h2 class="text-primary">@ViewBag.SporSalonuSayisi ?? 0</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="text-muted">Antrenörler</h5>
                <h2 class="text-success">@ViewBag.AntrenorSayisi ?? 0</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="text-muted">Üyeler</h5>
                <h2 class="text-warning">@ViewBag.UyeSayisi ?? 0</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="text-muted">Randevular</h5>
                <h2 class="text-danger">@ViewBag.RandevuSayisi ?? 0</h2>
            </div>
        </div>
    </div>
</div>

<!-- API Dokümantasyonu -->
<div class="collapse mt-4" id="apiDocs">
    <div class="card">
        <div class="card-header bg-light">
            <h6 class="mb-0">REST API Endpoints</h6>
        </div>
        <div class="card-body small">
            <div class="mb-3">
                <strong>Antrenörler:</strong>
                <ul>
                    <li><code>GET /api/antrenorler</code> - Tüm antrenörleri listele</li>
                    <li><code>GET /api/antrenorler/available?date=YYYY-MM-DD</code> - Müsait antrenörleri bul</li>
                    <li><code>GET /api/antrenorler/search?uzmanlik=Yoga</code> - Uzmanlık alanına göre ara</li>
                </ul>
            </div>
            <div>
                <strong>Randevular:</strong>
                <ul>
                    <li><code>GET /api/randevu</code> - Tüm randevuları listele</li>
                    <li><code>GET /api/randevu/uye/{uyeId}</code> - Üyenin randevuları</li>
                    <li><code>GET /api/randevu/antrenor/{antrenorId}</code> - Antrenörün randevuları</li>
                    <li><code>GET /api/randevu/tarih-araligi?baslangic=X&bitis=Y</code> - Tarih aralığı filtrelemesi</li>
                    <li><code>GET /api/randevu/durum/{durum}</code> - Durum filtrelemesi</li>
                </ul>
            </div>
        </div>
    </div>
</div>
