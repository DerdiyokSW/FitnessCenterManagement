@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spor Salonu Yönetim Sistemi</title>
    
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome İkonları -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Site CSS'i -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ========================================
         NAVIGASYON ÇUBUĞU (Navbar)
         ======================================== -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <!-- Logo / Şirket Adı -->
            <a class="navbar-brand fw-bold" href="/" title="Ana Sayfa">
                <i class="fas fa-dumbbell"></i> Fitness Center
            </a>

            <!-- Mobil Menü Toggle Butonu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Aç/Kapat">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Menüsü -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <!-- Genel Linkler (Herkese Açık) -->
                    <li class="nav-item">
                        <a class="nav-link" href="/" title="Ana Sayfa">
                            <i class="fas fa-home"></i> Ana Sayfa
                        </a>
                    </li>

                    <!-- Spor Salonları -->
                    <li class="nav-item">
                        <a class="nav-link" href="/SporSalonu/Index" title="Spor Salonları">
                            <i class="fas fa-building"></i> Salonlar
                        </a>
                    </li>

                    <!-- Hizmetler -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Hizmetler/Index" title="Hizmetler">
                            <i class="fas fa-spa"></i> Hizmetler
                        </a>
                    </li>

                    <!-- Antrenörler -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Antrenorler/Index" title="Antrenörler">
                            <i class="fas fa-person"></i> Antrenörler
                        </a>
                    </li>

                    <!-- Giriş Yapıldıysa Göster -->
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <!-- Üye Menüsü (Sadece Üyeler) -->
                        @if (User.IsInRole("Uye"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="uyeDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> Üye Menüsü
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="uyeDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/Randevu/BenimRandevularim">
                                            <i class="fas fa-calendar-check"></i> Benim Randevularım
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Randevu/YeniRandevu">
                                            <i class="fas fa-calendar-plus"></i> Yeni Randevu Al
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/YapayzekaTavsiye/Index">
                                            <i class="fas fa-brain"></i> Yapay Zeka Tavsiyesi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Uyeler/DuzenleProfilim">
                                            <i class="fas fa-user-edit"></i> Profilimi Düzenle
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- Admin Menüsü (Sadece Adminler) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-warning" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cog"></i> Admin Paneli
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <!-- Yönetim Bölümü -->
                                    <li><strong class="dropdown-header">Yönetim</strong></li>
                                    <li>
                                        <a class="dropdown-item" href="/SporSalonu/Index">
                                            <i class="fas fa-building"></i> Spor Salonları
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Hizmetler/Index">
                                            <i class="fas fa-spa"></i> Hizmetler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Antrenorler/Index">
                                            <i class="fas fa-person"></i> Antrenörler
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Uyeler/Index">
                                            <i class="fas fa-users"></i> Üyeler
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <!-- Raporlar Bölümü -->
                                    <li><strong class="dropdown-header">Raporlar</strong></li>
                                    <li>
                                        <a class="dropdown-item" href="/Randevu/Index">
                                            <i class="fas fa-list"></i> Tüm Randevular
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        <!-- Kullanıcı Menüsü -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="kullaniciDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="kullaniciDropdown">
                                <li>
                                    <form method="post" action="/Identity/Account/Logout">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Giriş Yapmadıysa Göster -->
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-light btn-sm ms-2" href="/Identity/Account/Login" title="Giriş Yap">
                                <i class="fas fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-light btn-sm ms-2" href="/Identity/Account/Register" title="Kayıt Ol">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ========================================
         BAŞARI / HATA MESAJLARI (Alert)
         ======================================== -->
    <div class="container mt-3">
        <!-- Başarı Mesajı -->
        @if (TempData["BasariliMesaj"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i>
                <strong>Başarılı!</strong> @TempData["BasariliMesaj"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }

        <!-- Hata Mesajı -->
        @if (TempData["HataMesaji"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i>
                <strong>Hata!</strong> @TempData["HataMesaji"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }

        <!-- Bilgilendirme Mesajı -->
        @if (TempData["BilgiMesaji"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle"></i>
                <strong>Bilgi!</strong> @TempData["BilgiMesaji"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
            </div>
        }
    </div>

    <!-- ========================================
         MAIN İÇERİK BÖLÜMÜ
         ======================================== -->
    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- ========================================
         FOOTER (Sayfa Altı)
         ======================================== -->
    <footer class="bg-dark text-white text-center py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Spor Salonu Yönetim Sistemi</h5>
                    <p class="small">ASP.NET Core MVC - 2025</p>
                </div>
                <div class="col-md-4">
                    <h5>İletişim</h5>
                    <p class="small">
                        📧 info@fitnesscenter.com<br>
                        📞 +90 (212) 555-1234
                    </p>
                </div>
                <div class="col-md-4">
                    <h5>Sosyal Ağlar</h5>
                    <a href="#" class="text-white me-2"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="text-white me-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <hr>
            <p class="small mb-0">&copy; 2025 Spor Salonu Yönetim Sistemi. Tüm Hakları Saklıdır.</p>
        </div>
    </footer>

    <!-- ========================================
         BOOTSTRAP 5 JS + JQUERY
         ======================================== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Site JavaScript'i -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Validation Scripts (ASP.NET Core) -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
