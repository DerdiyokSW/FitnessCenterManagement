@model Uye

@{
    ViewData["Title"] = "Profili Sil: " + Model?.Ad + " " + Model?.Soyad;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2 class="mb-4">@ViewData["Title"]</h2>
            
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> 
                <strong>Dikkat!</strong> Bu işlem geri alınamaz. Profilinizdeki tüm bilgiler silinecektir.
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Adı Soyadı</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ad) @Html.DisplayFor(model => model.Soyad)</dd>

                        <dt class="col-sm-3">Boy</dt>
                        <!-- Boy bilgisi (BouSantimetre property kullanılır) -->
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.BouSantimetre) cm</dd>

                        <dt class="col-sm-3">Ağırlık</dt>
                        <!-- Ağırlık bilgisi (AgirlikKilogram property kullanılır) -->
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.AgirlikKilogram) kg</dd>

                        <dt class="col-sm-3">Cinsiyet</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cinsiyet)</dd>

                        <dt class="col-sm-3">Fitness Hedefi</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FitnessHedefi)</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" asp-controller="Uyeler" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Profili Sil
                </button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>
