        <div class="mt-4 text-muted">
            <small>
                <i class="fas fa-info-circle"></i>
                Toplam <strong>@Model.Count()</strong> randevunuz bulunmaktadır.
            </small>
        </div>
    }
}
else
{
    <!-- Giriş Yapmamış Kullanıcılar -->
    <div class="alert alert-info text-center py-5">
        <i class="fas fa-lock" style="font-size: 2rem;"></i>
        <p class="mt-3">Randevularınızı görmek için <a href="/Identity/Account/Login">giriş yapmanız</a> gerekmektedir.</p>
    </div>
}
