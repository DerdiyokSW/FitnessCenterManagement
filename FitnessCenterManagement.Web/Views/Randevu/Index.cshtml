                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            <i class="fas fa-inbox"></i> Henüz randevunuz yok.
                            <br>
                            <a href="/Randevu/YeniRandevu" class="btn btn-sm btn-success mt-3">
                                <i class="fas fa-calendar-plus"></i> Yeni Randevu Al
                            </a>
                        </td>
                    </tr>
                }
                else
                {
