                            </td>
                            <td>
                                @if (randevu.Hizmet != null)
                                {
                                    <span class="badge bg-secondary">@randevu.Hizmet.Ad</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <small>@randevu.BaslamaTarihi.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <small>@randevu.BitisTarihi.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <strong class="text-success">₺@randevu.Ucret.ToString("F2")</strong>
                            </td>
                            <td>
                                @if (randevu.Durum == "Beklemede")
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock"></i> @randevu.Durum
                                    </span>
                                }
                                else if (randevu.Durum == "Onaylandı")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> @randevu.Durum
                                    </span>
                                }
                                else if (randevu.Durum == "İptal Edildi")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times"></i> @randevu.Durum
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@randevu.Durum</span>
                                }
                            </td>
                            <td class="text-center">
                                <!-- Detay Butonu -->
                                <a href="/Randevu/Details/@randevu.Id" class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Toplam Randevu Sayısı -->
    @if (Model != null && Model.Any())
