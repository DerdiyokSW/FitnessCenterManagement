@model IEnumerable<Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<!-- ========================================
     BAŞLIK BÖLÜMÜ
     ======================================== -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-calendar-check"></i> Randevular
    </h1>
    
    <!-- Üye: Yeni Randevu Al Butonu -->
    @if (User.IsInRole("Uye"))
    {
        <a href="/Randevu/YeniRandevu" class="btn btn-success">
            <i class="fas fa-calendar-plus"></i> Yeni Randevu Al
        </a>
    }
</div>

<!-- ========================================
     RANDEVULAR TABLOSU (Admin Görünümü)
     ======================================== -->
@if (User.IsInRole("Admin"))
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Üye</th>
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    <th>Başlama Tarihi</th>
                    <th>Bitiş Tarihi</th>
                    <th>Ücret (₺)</th>
                    <th>Durum</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted py-4">
                            <i class="fas fa-inbox"></i> Henüz randevu kaydı yok.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var randevu in Model.OrderByDescending(r => r.BaslamaTarihi))
                    {
                        <tr>
                            <td>
                                <strong>@randevu.Uye?.Ad @randevu.Uye?.Soyad</strong>
                            </td>
                            <td>
                                @randevu.Antrenor?.Ad @randevu.Antrenor?.Soyad
                            </td>
                            <td>
                                @if (randevu.Hizmet != null)
                                {
                                    <span class="badge bg-secondary">@randevu.Hizmet.Ad</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <small>@randevu.BaslamaTarihi.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <small>@randevu.BitisTarihi.ToString("dd/MM/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <strong class="text-success">₺@randevu.Ucret.ToString("F2")</strong>
                            </td>
                            <td>
                                @if (randevu.Durum == "Beklemede")
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock"></i> @randevu.Durum
                                    </span>
                                }
                                else if (randevu.Durum == "Onaylandı")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> @randevu.Durum
                                    </span>
                                }
                                else if (randevu.Durum == "İptal Edildi")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times"></i> @randevu.Durum
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@randevu.Durum</span>
                                }
                            </td>
                            <td class="text-center">
                                <!-- Detay Butonu -->
                                <a href="/Randevu/Details/@randevu.Id" class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Toplam Randevu Sayısı -->
    @if (Model != null && Model.Any())
    {
        <div class="mt-4 text-muted">
            <small>
                <i class="fas fa-info-circle"></i>
                Toplam <strong>@Model.Count()</strong> randevu bulunmaktadır.
            </small>
        </div>
    }
}
else if (User.IsInRole("Uye"))
{
    <!-- ========================================
         RANDEVULAR TABLOSU (Üye Görünümü)
         ======================================== -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
