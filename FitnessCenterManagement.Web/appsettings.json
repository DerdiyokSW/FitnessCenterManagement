{
  // ================================================
  // BAGLANTI DİZELERİ
  // ================================================
  "ConnectionStrings": {
    // SQL Server bağlantı dizesi
    // LocalDB kullanılıyor (yerel geliştirme için)
    // Server=(localdb)\mssqllocaldb;Database=FitnessCenterDb;Trusted_Connection=true;
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=FitnessCenterDb;Trusted_Connection=true;"
  },

  // ================================================
  // LOGGING AYARLARI
  // ================================================
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      // Entity Framework Core loglama
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },

  // ================================================
  // YAPAY ZEKA AYARLARI
  // (İleride OpenAI API key vb. yazılacak)
  // ================================================
  "AiSettings": {
    "Provider": "OpenAI",
    "ApiKey": "your-openai-api-key-here",
    "ApiUrl": "https://api.openai.com/v1"
  },

  // ================================================
  // UYGULAMAYA İZİN VERİLEN HOSTLAR
  // ================================================
  "AllowedHosts": "*"
}

